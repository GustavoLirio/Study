@model SalesWebMVC.Models.Car

@{
    ViewData["Title"] = "Deletar carro";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que quer deletar este carro?</h3>

<div>
  <h4>Carro</h4>
  <hr />
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(x => x.Nome)
    </dt>
    <dd>
      @Html.DisplayFor(x => x.Nome)
    </dd>
    <dt>
      @Html.DisplayNameFor(x => x.Modelo)
    </dt>
    <dd>
      @Html.DisplayFor(x => x.Modelo)
    </dd>
    <dt>
      @Html.DisplayNameFor(x => x.Cor)
    </dt>
    <dd>
      @Html.DisplayFor(x => x.Cor)
    </dd>
    <dt>
      @Html.DisplayNameFor(x => x.Ano)
    </dt>
    <dd>
      @Html.DisplayFor(x => x.Ano)
    </dd>
  </dl>

  <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Deletar" class="btn btn-default" />
